[run]
branch = 1
cover_pylib = 0
include=*mode/*
omit = t.*

[report]
omit =
    */python?.?/*
    */site-packages/*
    */pypy/*

    # tested by functional tests
    */mode/loop/*

    # not needed
    */mode/debug.py
    */mode/types/*
    */mode/utils/types/*
    */mode/utils/_py37_contextlib.py
    */mode/utils/compat.py
exclude_lines =
    # Have to re-enable the standard pragma
    if\ typing\.TYPE_CHECKING\:

    pragma: no cover

    if sys.platform == 'win32':

    \@abc\.abstractmethod
